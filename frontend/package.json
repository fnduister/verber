        "@mui/material": "^5.14.17",
        "@reduxjs/toolkit": "^1.9.7",
        "@types/node": "^16.18.65",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "axios": "^1.6.0",
