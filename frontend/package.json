        "eslint-plugin-react": "^7.33.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-config-react-app": "^7.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^13.2.3"
    },
    "overrides": {
        "nth-check": ">=2.0.1",
        "postcss": ">=8.4.31"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
