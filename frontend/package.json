            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/react-beautiful-dnd": "^13.1.6",
        "eslint": "^8.39.0",
        "@typescript-eslint/parser": "^5.62.0",
