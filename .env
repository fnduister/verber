# Environment variables for Docker Compose
# Copy this to .env and update the values

# Database Configuration
POSTGRES_USER=verber_user
POSTGRES_PASSWORD=verber_password_change_this
POSTGRES_DB=verber_db

# Backend Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
FRONTEND_URL=http://localhost:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_WS_URL=ws://localhost:8080
REACT_APP_ENVIRONMENT=development

# Production Configuration (for docker-compose.prod.yml)
# JWT_SECRET=production-jwt-secret-very-long-and-secure
# FRONTEND_URL=https://yourdomain.com
# REACT_APP_API_URL=https://api.yourdomain.com/api
# REACT_APP_WS_URL=wss://api.yourdomain.com